<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Client.Views.ConnexionPage">
	<StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Entry x:Name="_email" Placeholder="Email" WidthRequest="300" Text="{Binding Mail}" />
        <Entry x:Name="_password" Placeholder="Mot de passe" WidthRequest="300" Text="{Binding MotPasse}"/>
        <Button x:Name="_btnconnexion" Text="Se Connecter" Command="{Binding GetUserExist}" WidthRequest="300" TextColor="White" BorderColor="#4688f1" BackgroundColor="#4688f1" FontSize="12" />
	</StackLayout>
</ContentPage>
